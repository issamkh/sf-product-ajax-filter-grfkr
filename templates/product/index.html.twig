{% extends 'base.html.twig' %}

{% block title %}Tous nos produits {% endblock %}

{% block body %}
    <div class="container js-filter">
        <div class="row">
            <div class="col-md-3 ">
                {% include 'Product/_filter.html.twig' with{form:form }  %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-end mb-2 js-filter-sorting">
                    {% include 'product/_sorting.html.twig'  %}

                </div>
                <div class="grid js-filter-content">

                        {% include 'product/_products.html.twig' with{products: products} only %}

                </div>
                <div class="mt-4 js-filter-pagination">
                    {% include 'product/_pagination.html.twig' with{products: products} only %}

                </div>
            </div>
        </div>

    </div>
{% endblock %}
